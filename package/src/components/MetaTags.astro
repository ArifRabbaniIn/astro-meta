---
import TwitterMetaTags from '../features/twitter/components/TwitterMetaTags.astro';
import type { Metadata } from '../types/metadata';
import BasicMetaTags from './StandardMetaTags.astro';
import OpenGraphMetaTags from './open-graph/OpenGraphMetaTags.astro';

type Props = Metadata;

const { openGraph, twitter, ...rest } = Astro.props;
---

<BasicMetaTags {...rest} />
{openGraph ? <OpenGraphMetaTags {...openGraph} /> : null}
{twitter ? <TwitterMetaTags {...twitter} /> : null}
