---
import OpenGraphObjectTags from '../features/open-graph/components/OpenGraphObjectTags.astro';
import TwitterMetaTags from '../features/twitter/components/TwitterMetaTags.astro';
import type { Metadata } from '../types/metadata';
import StandardMetaTags from './StandardMetaTags.astro';

type Props = Metadata;

const { openGraph, twitter, ...rest } = Astro.props;
---

<StandardMetaTags {...rest} />
{openGraph ? <OpenGraphObjectTags {...openGraph} /> : null}
{twitter ? <TwitterMetaTags {...twitter} /> : null}
