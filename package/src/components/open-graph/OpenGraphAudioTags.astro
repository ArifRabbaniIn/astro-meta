---
import type { OpenGraphAudio } from '../../types/open-graph-metadata';

type Props = OpenGraphAudio;

const { url, secureUrl, type } = Astro.props;

let mimeType: string;

switch (type) {
  case 'aac':
    mimeType = 'audio/aac';
    break;
  case 'mp4':
    mimeType = 'audio/mp4';
    break;
  case 'mpeg':
    mimeType = 'audio/mpeg';
    break;
  case 'ogg':
    mimeType = 'audio/ogg';
    break;
  default: {
    const _exhaustiveCheck: never = type;
    mimeType = _exhaustiveCheck;
  }
}
---

<meta property="og:audio" content={url} />
{secureUrl ? <meta property="og:audio:secure_url" content={secureUrl} /> : null}
{mimeType ? <meta property="og:audio:type" content={mimeType} /> : null}
