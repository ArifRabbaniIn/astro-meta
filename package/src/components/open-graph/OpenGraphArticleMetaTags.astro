---
import type { OpenGraphArticle } from '../../types/open-graph-metadata';

type Props = OpenGraphArticle;

const { publishedTime, modifiedTime, expirationTime, authors, tags, section } =
  Astro.props;
---

<meta property="article:published_time" content={publishedTime} />
{
  modifiedTime ?
    <meta property="article:modified_time" content={modifiedTime} />
  : null
}
{
  expirationTime ?
    <meta property="article:expiration_time" content={expirationTime} />
  : null
}
{authors.map(author => <meta property="article:author" content={author} />)}
{section ? <meta property="article:section" content={section} /> : null}
{tags.map(tag => <meta property="article:tag" content={tag} />)}
