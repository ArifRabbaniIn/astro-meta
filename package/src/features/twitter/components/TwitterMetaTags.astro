---
import type { TwitterCard } from '../types/card';
import AppCardTags from './AppCardTags.astro';
import PlayerCardTags from './PlayerCardTags.astro';
import SummaryCardTags from './SummaryCardTags.astro';
import SummaryLargeImageCardTags from './SummaryLargeImageCardTags.astro';

type Props = TwitterCard;
---

<meta name="twitter:card" content={Astro.props.type} />

{Astro.props.type === 'summary' ? <SummaryCardTags {...Astro.props} /> : null}

{
  Astro.props.type === 'summary_large_image' ?
    <SummaryLargeImageCardTags {...Astro.props} />
  : null
}

{Astro.props.type === 'app' ? <AppCardTags {...Astro.props} /> : null}

{Astro.props.type === 'player' ? <PlayerCardTags {...Astro.props} /> : null}
