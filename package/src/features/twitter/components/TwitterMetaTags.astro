---
import type { TwitterCard } from '../types/card';
import AppCardMetaTags from './AppCardMetaTags.astro';
import PlayerCardMetaTags from './PlayerCardMetaTags.astro';
import SummaryCardMetaTags from './SummaryCardMetaTags.astro';
import SummaryLargeImageCardMetaTags from './SummaryLargeImageCardMetaTags.astro';

type Props = TwitterCard;
---

<meta name="twitter:card" content={Astro.props.card} />

{
  Astro.props.card === 'summary' ?
    <SummaryCardMetaTags {...Astro.props} />
  : null
}

{
  Astro.props.card === 'summary_large_image' ?
    <SummaryLargeImageCardMetaTags {...Astro.props} />
  : null
}

{Astro.props.card === 'app' ? <AppCardMetaTags {...Astro.props} /> : null}

{Astro.props.card === 'player' ? <PlayerCardMetaTags {...Astro.props} /> : null}
